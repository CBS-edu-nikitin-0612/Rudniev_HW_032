<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="200" Loaded="Window_Loaded">
    <Grid>
        <xctk:ColorPicker x:Name="colorPicker" HorizontalAlignment="Center" Width="40" Height="20"  SelectedColorChanged="colorBorderPicker_SelectedColorChanged" Margin="10,16,142,53" />
        <Label Name="colorName" Content="Selected color" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="65,41,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
